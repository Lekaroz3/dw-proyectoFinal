{% extends 'base.html.twig' %}

{% block title %}Pedidos index{% endblock %}

{% block body %}
    <h1>Pedidos index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Detalles</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pedido in pedidos %}
            <tr>
                <td>{{ pedido.id }}</td>
                <td>{{ pedido.detalles }}</td>
                <td>
                    <a href="{{ path('pedidos_show', {'id': pedido.id}) }}">show</a>
                    <a href="{{ path('pedidos_edit', {'id': pedido.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('pedidos_new') }}">Create new</a>
{% endblock %}
